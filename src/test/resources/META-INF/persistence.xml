<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ticketTestPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Categoria</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Departamento</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.DescripcionMantenimiento</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Directorio</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Encargado</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Estado</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.EstadoSolicitud</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.MantenimientoEncargado</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Prioridad</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Rol</class>
    <class>sv.uesocc.edu.ingenieria.dsii2018.acceso.definiciones.Solicitud</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:ticketdb"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
